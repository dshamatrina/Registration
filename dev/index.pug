        form.form(action="#" method="post" novalidate)
            .form_content
                h1.form_title Sign up for free!
                .form_line
                    label.form_label(for="gender") I am
                    .form_checkbox.form_checkbox__active
                        input.form_checkbox-hidden(type="radio" name="gender" value="Male" checked)
                        svg.form_icon.form_icon__male(width="24px" height="24px")
                            use(xlink:href="#male")
                    .form_checkbox
                        input.form_checkbox-hidden(type="radio" name="gender" value="Female")
                        svg.form_icon.form_icon__female(width="26px" height="25px")
                            use(xlink:href="#female")
                .form_line
                    label.form_label(for="year") Year of birth
                    .form_field
                        .form_select._showDropdown 2017
                        - var year = 2017;
                            ul.form_dropdown
                                while year > 1940
                                    li.form_option= year--
                .form_line
                    label.form_label(for="email") Email
                    input.form_field#email(type="email" name="email" required)
                .form_line
                    label.form_label(for="psw") Password
                    input.form_field#psw(type="password" name="psw" required)
                .form_line
                    label.form_label(for="postal") Postal Code
                    input.form_field#postal(type="text" name="postal" required)
                .form_tip
                    svg.form_icon.form_icon__location(width="20px" height="20px")
                        use(xlink:href="#location")
                    span E.g. Berlin or 10432
                    svg.form_icon.form_icon__question(width="20px" height="20px")
                        use(xlink:href="#question")
                    .form_tooltip
                        .form_tooltip-text We don't use postal codes to contact members directly
                        .form_tooltip-triangle
            .form_footer
                button.form_button(type="submit") Register Now!
                .form_condition 
                    | By clicking the button above you agree to our 
                    a(href="#") Terms of Use
                    br
                    |  and 
                    a(href="#") Privacy Policy
                    |  including use of cookies.

